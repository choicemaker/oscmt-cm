<assembly>
	<id>eclipse2prj</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>${project.artifactId}_${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}.${parsedVersion.qualifier}</baseDirectory>
  <files>
    <file>
      <source>
      ${project.build.directory}/dependency/javahelp.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>${eclipse.plugin.runtime.library.name}</destName>
    </file>
    <file>
      <source>
      ${project.build.directory}/dependency/javahelp-sources.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>${eclipse.plugin.src.zip.name}</destName>
    </file>
  </files>
	<fileSets>
		<fileSet>
		<includes>
        <include>about.html</include>
        <include>plugin.properties</include>
        <include>plugin.xml</include>
        <include>LICENSE-JAVAHELP.html</include>
		</includes>
		</fileSet>
	</fileSets>
</assembly>
