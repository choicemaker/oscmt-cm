<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
>

  <persistence-unit name="oaba" transaction-type="JTA">

    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

    <jta-data-source>choicemaker/urm/jdbc/ChoiceMakerEjb</jta-data-source>

    <class>com.choicemaker.cm.io.blocking.automated.offline.server.impl.BatchJobBean</class>
    <!--
    <class>com.choicemaker.cm.io.blocking.automated.offline.server.BatchJobAuditEvent</class>
