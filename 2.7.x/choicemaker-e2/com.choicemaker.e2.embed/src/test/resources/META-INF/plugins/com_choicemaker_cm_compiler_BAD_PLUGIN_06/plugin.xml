<?xml version="1.0" encoding="UTF-8"?>
<plugin
   name="Compiler Plug-in"
   version="2.5.0"
   provider-name="CHOICEMAKER">
<!-- NOTE ABOVE: missing id -->

   <runtime>
      <library name="compiler.jar">
         <export name="*"/>
      </library>
      <library name="lib/jakarta-oro-2.0.1.jar"/>
   </runtime>
   <requires>
      <import plugin="com.choicemaker.cm.core"/>
      <import plugin="org.apache.ant"/>
      <import plugin="org.apache.bcel"/>
   </requires>

   <extension
         point="com.choicemaker.cm.core.generatorPlugin">
      <plugin
            name="GUI Descriptors"
            class="com.choicemaker.cm.compiler.gen.GuiDescriptorGenerator">
      </plugin>
   </extension>
   <extension
         point="com.choicemaker.cm.core.objectGenerator">
      <generator
            default="true"
            description="Production Models Jar File"
            class="com.choicemaker.cm.compiler.util.ModelArtifactBuilder$ProductionModelsBuilder">
      </generator>
      <generator
            default="true"
            description="Holder Classes Jar File"
            class="com.choicemaker.cm.compiler.util.ModelArtifactBuilder$HolderClassesBuilder">
      </generator>
      <generator
            default="true"
            description="Holder Classes Javadoc (Zipped)"
            class="com.choicemaker.cm.compiler.util.ModelArtifactBuilder$ZippedJavadocBuilder">
      </generator>
   </extension>

</plugin>
