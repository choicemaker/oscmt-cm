<?xml version="1.0" encoding="utf-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.choicemaker.cm</groupId>
    <artifactId>choicemaker-prerequisites</artifactId>
    <version>2.7.2-rc.3</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>org.eclipse.core.runtime</artifactId>
  <version>2.1.2-rc.3</version>
  <packaging>jar</packaging>
  <name>Eclipse Core Runtime</name>

  <description><![CDATA[
  Builds the Eclipse 2.1 Core Runtime Plugin
  (http://archive.eclipse.org/eclipse/downloads/drops/R-2.1.3-200403101828/)
  under Maven.
  ]]>
  </description>
  <licenses>
    <license>
      <name>Eclipse Public License 1.0</name>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>rphall</id>
      <name>Rick Hall</name>
      <url>http://sourceforge.net/users/rphall</url>
      <roles>
        <role>Maven packaging</role>
      </roles>
    </developer>
  </developers>

  <contributors>
    <contributor>
      <name>Eclipse Project</name>
      <url>http://www.eclipse.org/</url>
    </contributor>
  </contributors>

  <properties>
    <eclipse.plugin.runtime.library.name>runtime.jar</eclipse.plugin.runtime.library.name>
    <eclipse.plugin.src.zip.name>runtimesrc.zip</eclipse.plugin.src.zip.name>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>echo-params</id>
            <phase>validate</phase>
            <configuration>
              <target>
                <echo
                  message="eclipse.plugin.runtime.library.name: ${eclipse.plugin.runtime.library.name}" />
                <echo
                  message="eclipse.plugin.src.zip.name: ${eclipse.plugin.src.zip.name}" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>package</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>com.choicemaker.cm</groupId>
            <artifactId>choicemaker-assembly</artifactId>
            <version>2.7.1-rc.3</version>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <id>assembly</id>
            <phase>package</phase>
            <configuration>
              <descriptorRefs>
                <descriptorRef>cm-std-assembly</descriptorRef>
              </descriptorRefs>
            </configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.choicemaker.cm</groupId>
      <artifactId>org.eclipse.core.boot</artifactId>
    </dependency>
  </dependencies>

</project>
