<?xml version="1.0" encoding="utf-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.choicemaker.cm</groupId>
    <artifactId>choicemaker-prerequisites</artifactId>
    <version>2.7.2-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>jfree.jfreechart.eclipse2plugin</artifactId>
  <version>1.0.15-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>JFreeChart Plugin</name>

  <description><![CDATA[
  Repackages the open-source JFreeChart library
  (https://sourceforge.net/projects/jfreechart/) as an Eclipse 2.1 plugin.
  ]]>
  </description>
  <licenses>
    <license>
      <name>GNU Library or Lesser General Public License, Version 2.0</name>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>rphall</id>
      <name>Rick Hall</name>
		  <url>http://sourceforge.net/users/rphall</url>
      <roles>
        <role>Eclipse/Maven packaging</role>
      </roles>
    </developer>
  </developers>

  <contributors>
  	<contributor>
  		<name>JFreeChart Project</name>
  		<url>http://sourceforge.net/projects/jfreechart/</url>
  	</contributor>
  </contributors>

  <properties>
    <eclipse.plugin.runtime.library.name>jfreechart.jar</eclipse.plugin.runtime.library.name>
    <eclipse.plugin.runtime.library.download>${project.build.directory}/dependency/jfreechart.jar</eclipse.plugin.runtime.library.download>

    <eclipse.plugin.src.zip.name>jfreechartsrc.zip</eclipse.plugin.src.zip.name>
    <eclipse.plugin.src.zip.download>${project.build.directory}/dependency/jfreechart-sources.jar</eclipse.plugin.src.zip.download>
  </properties>

  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>src/main/eclipse2</directory>
        <targetPath>META-INF/plugins</targetPath>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>parse-version</id>
            <goals>
              <goal>parse-version</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>echo-params</id>
            <phase>validate</phase>
            <configuration>
              <target>
                <echo
                  message="eclipse.plugin.runtime.library.name: ${eclipse.plugin.runtime.library.name}" />
                <echo
                  message="eclipse.plugin.src.zip.name: ${eclipse.plugin.src.zip.name}" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependency</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
              <artifactItem>
                <groupId>org.jfree</groupId>
                <artifactId>jfreechart</artifactId>
                <outputDirectory>${project.build.outputDirectory}</outputDirectory>
              </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <id>download-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
              <artifactItem>
                <groupId>org.jfree</groupId>
                <artifactId>jfreechart</artifactId>
              </artifactItem>
              <artifactItem>
                <groupId>org.jfree</groupId>
                <artifactId>jfreechart</artifactId>
                <classifier>sources</classifier>
              </artifactItem>
              </artifactItems>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>assembly</id>
            <phase>package</phase>
            <configuration>
              <descriptor>src/main/assembly/assembly.xml</descriptor>
            </configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <pluginManagement>
    	<plugins>
    		<!-- CM-8: Maven Build Lifecycle Problems -->
    		<plugin>
    			<groupId>org.eclipse.m2e</groupId>
    			<artifactId>lifecycle-mapping</artifactId>
    			<version>1.0.0</version>
    			<configuration>
    				<lifecycleMappingMetadata>
    					<pluginExecutions>
    						<pluginExecution>
    							<pluginExecutionFilter>
    								<groupId>
    									org.apache.maven.plugins
    								</groupId>
    								<artifactId>
    									maven-dependency-plugin
    								</artifactId>
    								<versionRange>[2.8,)</versionRange>
    								<goals>
    									<goal>unpack</goal>
    								</goals>
    							</pluginExecutionFilter>
    							<action>
    								<ignore></ignore>
    							</action>
    						</pluginExecution>
    					</pluginExecutions>
    				</lifecycleMappingMetadata>
    			</configuration>
    		</plugin>
    	</plugins>
    </pluginManagement>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.jfree</groupId>
      <artifactId>jfreechart</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jfree</groupId>
      <artifactId>jfreechart</artifactId>
      <classifier>sources</classifier>
    </dependency>
  </dependencies>

</project>
