<?xml version="1.0"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.choicemaker.cm</groupId>
    <artifactId>choicemaker-prerequisites</artifactId>
    <version>2.7.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>javax.help.eclipse2plugin</artifactId>
  <version>2.0.05-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Java Help Plugin</name>

  <description><![CDATA[
  Repackages the JavaHelp library (https://javahelp.java.net/)
  as an Eclipse 2.1 plugin.
  ]]>
  </description>
  <licenses>
    <license>
      <name>GNU General Public License - Version 2 with the class path exception</name>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>rphall</id>
      <name>Rick Hall</name>
      <url>http://sourceforge.net/users/rphall</url>
      <roles>
        <role>Eclipse/Maven packaging</role>
      </roles>
    </developer>
  </developers>

  <contributors>
    <contributor>
      <name>JavaHelp Project</name>
      <url>https://javahelp.java.net/</url>
    </contributor>
  </contributors>

  <properties>
    <eclipse.plugin.runtime.library.name>jhall.jar</eclipse.plugin.runtime.library.name>
    <eclipse.plugin.runtime.library.download>${project.build.directory}/dependency/javahelp.jar</eclipse.plugin.runtime.library.download>

    <eclipse.plugin.src.zip.name>jhallsrc.zip</eclipse.plugin.src.zip.name>
    <eclipse.plugin.src.zip.download>${project.build.directory}/dependency/javahelp-sources.jar</eclipse.plugin.src.zip.download>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-dependency</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>javax.help</groupId>
                  <artifactId>javahelp</artifactId>
                  <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <id>download-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>javax.help</groupId>
                  <artifactId>javahelp</artifactId>
                </artifactItem>
                <artifactItem>
                  <groupId>javax.help</groupId>
                  <artifactId>javahelp</artifactId>
                  <classifier>sources</classifier>
                </artifactItem>
              </artifactItems>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>assembly</id>
            <phase>package</phase>
            <configuration>
              <descriptor combine.self="override">src/main/assembly/assembly.xml</descriptor>
              <descriptorRefs combine.self="override"/>
            </configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
    		<!-- CM-8: Maven Build Lifecycle Problems -->
        <plugin>
          <groupId>org.eclipse.m2e</groupId>
          <artifactId>lifecycle-mapping</artifactId>
          <version>1.0.0</version>
          <configuration>
            <lifecycleMappingMetadata>
              <pluginExecutions>
                <pluginExecution>
                  <pluginExecutionFilter>
                    <groupId>
                      org.apache.maven.plugins
                    </groupId>
                    <artifactId>
                      maven-dependency-plugin
                    </artifactId>
                    <versionRange>[2.8,)</versionRange>
                    <goals>
                      <goal>unpack</goal>
                    </goals>
                  </pluginExecutionFilter>
                  <action>
                    <ignore></ignore>
                  </action>
                </pluginExecution>
              </pluginExecutions>
            </lifecycleMappingMetadata>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <dependencies>
    <dependency>
      <groupId>javax.help</groupId>
      <artifactId>javahelp</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.help</groupId>
      <artifactId>javahelp</artifactId>
      <classifier>sources</classifier>
    </dependency>
  </dependencies>

</project>
