<?xml version="1.0" encoding="utf-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.choicemaker.cm</groupId>
    <artifactId>choicemaker-cm</artifactId>
    <version>2.7.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>model_projects</artifactId>
  <packaging>pom</packaging>

  <name>Modeling Projects</name>
  <description><![CDATA[
  Examples of record-matching projects. These represent models that are
  at initial stages of development, before they are formalized into
  ChoiceMaker plugins. Maven artifacts of model projects consist of
  ClueMaker and Java source code.
  ]]>
  </description>

  <modules>
    <module>simple-person-project</module>
  </modules>

  <build>
    <plugins>

      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <skip>${javadocs.skip}</skip>
          <skipDeploy>${javadocs.skip}</skipDeploy>
        </configuration>
      </plugin>

    </plugins>
  </build>

</project>

