<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
xmlns="http://maven.apache.org/POM/4.0.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>choicemaker-cm</artifactId>
    <groupId>com.choicemaker.cm</groupId>
    <version>2.7.1-SNAPSHOT</version>
  </parent>

  <artifactId>com.choicemaker.cm.ml.me.base</artifactId>
  <packaging>jar</packaging>
  <name>ChoiceMaker Machine Learning Maximum Entropy Plug-in</name>

  <properties>
    <eclipse.plugin.runtime.library.name>base.jar</eclipse.plugin.runtime.library.name>
    <eclipse.plugin.src.zip.name>basesrc.zip</eclipse.plugin.src.zip.name>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>src</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
      </resource>
      <resource>
        <directory>etc</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
				<groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>bin-assembly</id>
            <phase>package</phase>
        		<configuration>
							<descriptor>bin-assembly.xml</descriptor>
        		</configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
          <execution>
            <id>src-assembly</id>
            <phase>package</phase>
        		<configuration>
							<descriptor>src-assembly.xml</descriptor>
        		</configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
          <execution>
            <id>prj-assembly</id>
            <phase>package</phase>
        		<configuration>
							<descriptor>prj-assembly.xml</descriptor>
        		</configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
		<dependency>
			<groupId>com.choicemaker.cm</groupId>
			<artifactId>com.choicemaker.cm.core</artifactId>
			<version>2.7.1-SNAPSHOT</version>
		</dependency>
  </dependencies>

</project>
