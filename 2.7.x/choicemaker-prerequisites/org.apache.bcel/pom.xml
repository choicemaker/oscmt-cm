<?xml version="1.0" encoding="utf-8"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.choicemaker.cm</groupId>
    <artifactId>choicemaker-prerequisites</artifactId>
    <version>2.7.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>org.apache.bcel</artifactId>
  <version>5.0.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Apache BCEL Plugin</name>

  <description><![CDATA[
  This module repackages the open-source Apache BCEL library (http://commons.apache.org/bcel)
  as an Eclipse 2.1 plugin.
  ]]>
  </description>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
      <comments>Applies to BCEL source code.</comments></license>
  </licenses>

  <properties>
    <eclipse.plugin.runtime.library.name>bcel.jar</eclipse.plugin.runtime.library.name>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>${project.projectDirectory}</directory>
        <includes>
          <include>LICENSE-BCEL.txt</include>
        </includes>
      </resource>
    </resources>
    <plugins>
<!--
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <version>${plugin.maven-site.version}</version>
        <configuration>
          <skip>false</skip>
        </configuration>
      </plugin>
-->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>parse-version</id>
            <goals>
              <goal>parse-version</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>echo-params</id>
            <phase>validate</phase>
            <configuration>
              <target>
                <echo
                  message="eclipse.plugin.runtime.library.name: ${eclipse.plugin.runtime.library.name}" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>unpack-jar</id>
            <phase>compile</phase>
            <configuration>
              <target>
                <unzip src="${eclipse.plugin.runtime.library.name}"
                  dest="${project.build.outputDirectory}" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>prj-assembly</id>
            <phase>package</phase>
            <configuration>
              <descriptor>prj-assembly.xml</descriptor>
            </configuration>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies />

</project>
